<h1><%= t('activerecord.attributes.task.tasks_index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to t('activerecord.attributes.task.show'), task %></td>
        <td><%= link_to t('activerecord.attributes.task.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('activerecord.attributes.task.destroy'), task, method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.new'), new_task_path %>
