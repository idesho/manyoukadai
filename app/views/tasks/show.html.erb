<h1><%= t('activerecord.attributes.task.show_task') %></h1>

<p>
  <strong><%=t('activerecord.attributes.task.title')%>:</strong>
  <%= @task.title %>
</p>

<p>
  <strong><%=t('activerecord.attributes.task.content')%>:</strong>
  <%= @task.content %>
</p>

<p>
  <strong><%=t('activerecord.attributes.task.created_at')%>:</strong>
  <%= @task.created_at.strftime('%Y/%m/%d %H:%M') %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:deadline_on) %>:</strong>
  <%= @task.deadline_on.strftime('%Y/%m/%d') %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:priority) %>:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong><%= Task.human_attribute_name(:status) %>:</strong>
  <%= @task.status %>
</p>

<%= link_to t('activerecord.attributes.task.edit'), edit_task_path(@task), class: 'edit-task' %> |
<%= link_to t('activerecord.attributes.task.back'), tasks_path, class: 'back' %>