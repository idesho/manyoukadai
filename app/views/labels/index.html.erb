<h1><%= t('.Label Index Page') %></h1>
<table class="table">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.tasks') %></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
    <tr>
      <td><%= label.name %></td>
      <td><%= label.tasks.count %></td>
      <td><%= link_to t('.edit'), edit_label_path(label), id: 'edit-label', class: 'btn btn-primary' %></td>
      <td><%= link_to t('.destroy'), label_path(label), method: :delete, id: 'destroy-label', data: {confirm: t('.Are you sure?')}, class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>