<h1><%= t('session.new.log_in') %></h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email, t('session.new.email') %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :password, t('session.new.password') %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group d-flex justify-content-end">
    <%= form.submit t('session.new.Log in'), id: 'create-session', class: 'btn btn-primary' %>
  </div>
<% end %>